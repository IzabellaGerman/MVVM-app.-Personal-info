<UserControl x:Class="PersonalInfo.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalInfo.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text=" [Unprepared yet] Click to view projects on GitHub"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,15"
                   FontFamily="/Fonts/#Poppins"/>

        <StackPanel Orientation="Horizontal">
            <Border Width="400"
                    Height="200">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#5bc3ff" Offset="0.0"/>
                        <GradientStop Color="#3aa0ff" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,400,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Taxi"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Margin="20,10,10,0"
                                   FontFamily="/Fonts/#Poppins"/>
                        <TextBlock Text="Where to?"
                                   Foreground="White"
                                   FontSize="18"
                                   Margin="20,10,10,0"
                                   FontFamily="/Fonts/#Poppins"/>
                    </StackPanel>

                    <Image Width="250"
                           Height="250"
                           Source="/Images/Taxi.png"
                           HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <Border Width="200"
                    Height="200"
                    CornerRadius="10"
                    Margin="45,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#ffc554" Offset="0.0"/>
                        <GradientStop Color="#ffb73a" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Image                    
                           Width="160"
                           Source="/Images/ShoppingCart1.png"
                           HorizontalAlignment="Center"/>
                </Grid>
                
            </Border>
        </StackPanel>

        <StackPanel >
            <TextBlock Text=""
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        Background="#844eff"
                        CornerRadius="10">

                    <Grid>
                        <Image                    
                           Width="100"
                           Source="/Images/Wallet.png"
                           HorizontalAlignment="Center"/>
                    </Grid>
                    
                </Border>
                <Border Width="450"
                        Height="150"
                        Margin="45,0,0,0"
                        CornerRadius="10">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#4e99ff" Offset="0.0"/>
                            <GradientStop Color="#ecff4e" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <StackPanel>
                            
                            <TextBlock Text="Dictionary"
                                       HorizontalAlignment="Right"
                                       Foreground="White"
                                        FontSize="28"
                                       FontWeight="Bold"
                                        Margin="20,10,20,0"
                                       FontFamily="/Fonts/#Poppins"/>
                            
                            <TextBlock Text="Can I help you?"
                                        HorizontalAlignment="Right"
                                        Foreground="White"
                                        FontSize="18"
                                        Margin="20,10,20,0"
                                       FontFamily="/Fonts/#Poppins"/>
                            
                        </StackPanel>
                        
                    </Grid>

                </Border>

            </StackPanel>

        </StackPanel>

    </StackPanel>
</UserControl>
